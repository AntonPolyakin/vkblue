{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "checkJs": false,
        "pretty": true,
        "typeRoots": ["./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["./node_modules", "./extensions"]
}
